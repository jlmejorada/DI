<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio02.MainPage">

    <FlexLayout Direction="Column">
        
        <Label BackgroundColor="LightBlue" HorizontalTextAlignment="Center" Text="HEADER"/>
        
        <FlexLayout FlexLayout.Grow="1">
            
            <BoxView FlexLayout.Basis="70" Color="Blue"/>

            <Label FlexLayout.Grow="1" BackgroundColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="CONTENT"/>

            <BoxView FlexLayout.Basis="70" Color="Green"/>
            
        </FlexLayout>

        <Label BackgroundColor="LightPink" HorizontalTextAlignment="Center" Text="FOOTER"/>
        
    </FlexLayout>
    
</ContentPage>
